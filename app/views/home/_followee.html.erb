<div class="row followee">
  <div class="large-2 columns">
    <%= image_tag followee[0].profile_image_url %>
  </div>

  <div class="large-10 columns">
    <strong class="full-name"><%= followee[0].name %></strong>
    <span class="screen-name">@<%= followee[0].screen_name %></span>
    <div>
      <span>Tweets: <%= followee[1] %></span>
      <%= link_to unfollow_path(followee[0].id), class: 'right' do %>
        <%= fa_icon "meh-o", text: "Unfollow" %>
      <% end %>
    </div>
  </div>
</div>
